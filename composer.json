{
  "name": "maxbeckers/amazon-alexa-php",
  "type": "library",
  "description": "This library is a helper for amazon alexa skills with php.",
  "keywords": [
    "alexa",
    "php",
    "skill",
    "amazon-alexa",
    "amazon-alexa-php",
    "amazon-echo",
    "amazon-echo-php",
    "alexa-skill",
    "alexa-skill-php"
  ],
  "license": "MIT",
  "support": {
    "issues": "https://github.com/maxbeckers/amazon-alexa-php/issues",
    "source": "https://github.com/maxbeckers/amazon-alexa-php"
  },
  "authors": [
    {
      "name": "Maximilian Beckers",
      "email": "beckers.maximilian@gmail.com",
      "role": "Developer"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": "7.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.8",
    "phpunit/php-code-coverage": ">=5.0",
    "phpunit/phpunit": ">=6.0"
  },
  "autoload": {
    "psr-4": {
      "MaxBeckers\\AmazonAlexa\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs": "php-cs-fixer fix --config=.php_cs.php -v --allow-risky=yes"
  }
}
